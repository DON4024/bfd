!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Bfd
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    .side-bar-left
      = link_to root_path, class: 'btn' do
        .side-bar-left__appri-name
      - if user_signed_in? 
        .side-bar-left__group-list
          .user-icon
            - if current_user.image
              = link_to edit_user_path(current_user), class: "btn" do
                = image_tag current_user.image.url, class: "current-user-image"
            - else
              = current_user.nickname 
          .sign-in
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
          .write-message
            = link_to "新規投稿", new_picture_path, class: 'btn'
          .my-favorite
            = link_to user_path(current_user.id), class: "btn" do
              マイページ
      - else 
        .side-bar-left__group-list
          .sign-in
            = link_to new_user_registration_path, class: "btn" do
              sign up
          .write-message
            = link_to new_user_session_path, class: "btn" do
              sign in
        
    
    .side-bar-right
      -if user_signed_in?
        .like-user-lists
          .like-user-message
            お気に入りユーザー
          .like-user-box
            - @following.each do |following|
              .like-user-items
                = link_to user_path(search_id(following)), class: "like-btn" do
                  .like-user-items__icon
                    = image_tag following.follow.image, class: "current-user-image", alt: "no image" do
                      .like-user-items__nickname
                        don
            

 
        .like-image-lists
          .like-user-message
            お気に入り写真
          .like-image-box
            - @favorites.each do |favorite|
              .like-image-items
                = link_to "#", class: "like-btn" do
                  .like-image-items__icon
                    = image_tag favorite.picture.image.url, class: "current-user-image" 
                      
      - else



  %body
    = render 'layouts/notifications'
    = yield

