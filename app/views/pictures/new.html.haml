      %h3 新規投稿
      
    .form.account-page__inner--right.user-form
      = form_for [@picture] do |f|
        .field
          .field-label
            = f.label :image 
          .field-input
            = f.file_field :image, class: 'hidden'
        .field
          .field-label
            = f.label :content
          .field-input
            = f.text_field :content
        
        .actions
          = f.submit "投稿", class: 'btn'


